<idea-plugin version="2">
    <name>BEMHTML Support</name>
    <description>Plugin for BEMHTML language support</description>
    <version>1.0.0</version>
    <vendor>BEM</vendor>
    <change-notes><![CDATA[
    <h3>1.0.0</h3><ul><li>Basic syntax highlighting.</li></ul>
    ]]>
    </change-notes>

    <depends>com.intellij.modules.xml</depends>
    <depends>JavaScript</depends>

    <application-components>
        <component>
            <implementation-class>bem.idea.bemhtml.BemHtmlLoader</implementation-class>
        </component>
    </application-components>

    <project-components>
        <component>
            <implementation-class>bem.idea.bemhtml.lang.injection.BemHtmlJavaScriptInjectionComponent</implementation-class>
        </component>
    </project-components>

    <actions>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <lang.parserDefinition language="BemHtml" implementationClass="bem.idea.bemhtml.lang.parser.BemHtmlParserDefinition"/>
        <colorSettingsPage implementation="bem.idea.bemhtml.highlighter.BemHtmlColorSettingsPage"/>
        <lang.fileViewProviderFactory language="BemHtml" implementationClass="bem.idea.bemhtml.file.BemHtmlFileViewProviderFactory"/>
    </extensions>

</idea-plugin>